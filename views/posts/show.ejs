	<title></title>
</head>
<body>

	<h1><%=article.title%></h1>

	<div>
			<section>original author: <%=article.origAuthor%></section><br/>
			<section>Categories: 
				<% for(var i = 0; i < article.categories.length; i++) { %>
					<li><%=article.categories[i]%></li>
				<% } %>
			</section><br/>
			<section><%=article.body%></section>
			<a href="/posts/<%=data._id%>/edit/<%=article._id%>"><button>Edit this post</button></a>
	</div>
	<a href="/users/<%=data._id%>"><button>Back to your Posts</button></a>
	<a href="/users/<%=data._id%>/main"><button>Main Page</button></a>
	
</body>
</html>